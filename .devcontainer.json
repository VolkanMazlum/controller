{
    "name": "Develop controller",
    "dockerComposeFile": [
        "docker-compose.yml"
    ],
    "remoteUser": "simuser",
    // "remoteUser": "${localEnv:USER}",
    "workspaceFolder": "/sim/controller",
    "service": "simulation",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.black-formatter",
                "ms-python.python",
                "ms-python.debugpy",
                "ms-python.vscode-pylance",
                "ms-python.isort",
                "kennylong.kubernetes-yaml-formatter"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/sim/venv/bin/python",
                "python.analysis.ignore": [
                    "./complete_control/deprecated"
                ],
                "editor.formatOnSave": true,
                "[python]": {
                    "editor.defaultFormatter": "ms-python.black-formatter"
                }
            }
        }
    }
}